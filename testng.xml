<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AllTestsSuite" parallel="tests" thread-count="2">

    <test name="LoginTests">
        <classes>
            <class name="ui.LoginTest"/>
        </classes>
    </test>

    <test name="TaskTests">
        <classes>
            <class name="ui.TaskTest"/>
        </classes>
    </test>

    <test name="FilterTests">
        <classes>
            <class name="ui.FilterTest"/>
        </classes>
    </test>

    <test name="LoginApiTests" group-by-instances="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.LoginAPITest"/>
        </classes>
    </test>

    <test name="TaskApiTests" group-by-instances="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.TaskAPITest"/>
        </classes>
    </test>

    <test name="FilterApiTests" group-by-instances="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <classes>
            <class name="api.FilterAPITest"/>
        </classes>
    </test>

</suite>